# Production Environment Variables
# Copy this file to .env.production and replace with your production values

# Application Environment
NODE_ENV=production
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your_strong_production_nextauth_secret_here

# Stripe Configuration (REQUIRED - Use production keys)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Supabase Configuration (REQUIRED - Use production instance)
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key
SUPABASE_DB_PASSWORD=your_secure_production_db_password

# Google Maps API (REQUIRED for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your_production_google_places_api_key

# SMTP Configuration (REQUIRED for email notifications)
SMTP_HOST=your_production_smtp_host
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_production_smtp_user
SMTP_PASS=your_production_smtp_password

# Security Configuration
# Add any additional security-related environment variables
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# REDIS_URL=your_redis_url_for_caching
